#!/usr/bin/env bash

source ./scripts/_init

set -x

yarn run prepublishOnly

# setup workspace
o="$BASE_DIR"
rm -rf "${o}"
mkdir -p "${o}/node_modules"
mkdir -p "${o}/bin"
cp "$ROOT_DIR/README.md" "${o}"
cp "$ROOT_DIR/LICENSE" "${o}"
cp "$ROOT_DIR/package.json" "${o}"
cp "$ROOT_DIR/yarn.lock" "${o}"
cp "$ROOT_DIR/.anycli.manifest.json" "${o}"
cp -rv "$ROOT_DIR/lib" "${o}/lib"

(
  cd "${o}" || exit 1
  # install packages
  yarn install --no-progress --production --non-interactive
)

cat << EOF > "${o}/bin/heroku.js"
#!/usr/bin/env node
global.heroku = {
  channel: '${CHANNEL}',
  version: '${VERSION}',
}
require('@anycli/command').run()
.catch(require('@anycli/errors/handle'))
EOF
